[make]
make_cmd:                               make -j8

[QtForInstallerFramework]
qt_src_package_url:                     http://origin.releases.qt-project.org/prebuilt/qt-everywhere-opensource-src-4.8.0-ifw-patch.tar.gz
qt_source_dir:                          qt-src
qt_build_dir:                           qt-bld
qt_installerfw_qt_configure_line:       -static -release -opensource -confirm-license -silent -nomake examples -nomake demos -nomake tests -nomake docs -nomake plugins -qt-zlib -qt-libtiff -qt-libpng -qt-libmng -qt-libjpeg -no-webkit -no-phonon -no-dbus -no-opengl -no-qt3support -no-xmlpatterns -no-svg -no-nis -no-cups -no-multimedia -no-audio-backend -no-phonon -no-phonon-backend -no-webkit -no-declarative -no-declarative-debug -no-accessibility -no-glib -no-gtkstyle -prefix

[InstallerFramework]
installer_framework_url:                git://gitorious.org/installer-framework/installer-framework.git
